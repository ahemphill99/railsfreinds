

<h1>People</h1>
<div class="table-responsive">
  <table class="table table-responsive table-sm table-bordered table-striped table-hover">
    <thead class="table-dark">
      <tr>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
      </tr>
    </thead>

    <tbody class="">
     <% @people.each do |person| %>

     <tr>
      <td><%= person.first_name %></td>
      <td><%= person.last_name %></td>
      <td><%= person.email %></td>
      <td><%= person.phone %></td>
      <td><%= person.twitter %></td>
      <td><%= link_to "View", person, class:"btn btn-sm btn-danger", style:"--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;" %> </td>
      <td><%= link_to 'Edit', edit_person_path(person), class:"btn btn-sm btn-danger", style:"--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;" %></td>
      <td> <%= link_to 'Delete', person, method: :delete, data: {confirm: 'Are you sure'}, class:"btn btn-sm btn-danger", style:"--bs-btn-padding-y: .25rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem; "%></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to "Add person", new_person_path, class:"btn btn-sm btn-danger"%>
